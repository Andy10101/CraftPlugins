<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:gravity="center"
		android:orientation="vertical"
		android:background="#D7D7D7"
		android:layout_centerHorizontal="true">

		<Button
			android:layout_height="wrap_content"
			android:text="What is the application？"
			android:layout_width="match_parent"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@drawable/mybutton"
			android:id="@+id/bn_bf"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="The application is made by jianmo! It will help you keep away from your mobile phone at school because it will kill all of your software without root!"
			android:layout_width="match_parent"
			android:gravity="center"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/sp"
			android:layout_marginBottom="10dp"/>

		<Button
			android:layout_height="wrap_content"
			android:text="What to do while running?"
			android:layout_width="match_parent"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:background="@drawable/mybutton"
			android:id="@+id/bn_hy"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="--Study hard.\tI wish that you would get good grades with it.\n--Clear your data.\tYou can go into recovery to delete all the data.But in this way,you would lose all of data.\nWhich will you choose?"
			android:layout_width="match_parent"
			android:layout_marginTop="10dp"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/sp"/>

		<TextView
			android:layout_height="wrap_content"
			android:text="中型文本"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_width="wrap_content"
			android:layout_marginTop="15dp"
			android:id="@+id/mainTextViewTime"/>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:text="Copyright © 20140608 v3.0 Jianmo"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="24dip"/>

</RelativeLayout>

