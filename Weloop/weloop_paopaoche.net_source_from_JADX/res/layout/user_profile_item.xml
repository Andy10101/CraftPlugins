<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="-1" android:layout_height="-2">
    <RelativeLayout android:id="@id/profile_item" android:layout_width="-1" android:layout_height="40dp" android:layout_marginTop="10dp">
        <ImageView android:id="@id/option_tag_icon" android:layout_width="-2" android:layout_height="-2" android:src="@drawable/tag_life_calorie" android:scaleType="5" android:layout_centerVertical="true" android:layout_marginStart="15dp" android:layout_alignParentStart="true" />
        <TextView android:textSize="16sp" android:textColor="@color/ranking_gray" android:id="@id/option_name" android:layout_width="-2" android:layout_height="-2" android:layout_marginBottom="3dp" android:layout_alignBottom="@id/option_tag_icon" android:layout_marginStart="10dp" android:layout_toEndOf="@id/option_tag_icon" />
        <TextView android:textSize="16sp" android:textColor="@color/ranking_gray" android:id="@id/option_unit" android:layout_width="-2" android:layout_height="-2" android:layout_alignBottom="@id/option_name" android:layout_toEndOf="@id/option_name" />
        <ImageView android:id="@id/option_unit_icon" android:layout_width="16dp" android:layout_height="16dp" android:src="@drawable/unit_calorie" android:scaleType="1" android:layout_alignParentTop="true" android:contentDescription="@string/app_name" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true" />
        <TextView android:textSize="28sp" android:textStyle="1" android:textColor="@color/ranking_normal" android:gravity="10" android:id="@id/option_value" android:layout_width="-2" android:layout_height="-2" android:layout_marginBottom="3dp" android:layout_centerVertical="true" android:layout_toStartOf="@id/option_unit_icon" />
    </RelativeLayout>
</FrameLayout>
