    <LinearLayout android:orientation="0" android:id="@id/linearLayout" android:layout_width="-1" android:layout_height="-2" android:layout_below="@id/trajectory_rl_title" android:layout_centerHorizontal="true">
        <include android:id="@id/trajectoy_rl_calories" android:layout_width="-2" android:layout_height="-2" android:layout_weight="1.0" android:layout_below="@id/linearLayout" android:layout_centerHorizontal="true" layout="@layout/activity_trajectory_item" />
