<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="1" android:id="@id/white_group" android:background="@color/white" android:layout_width="-1" android:layout_height="-2">
    <TextView android:background="@color/device_bg_gray" android:text="@string/message_settings" style="@style/device_label_text" />
    <include layout="@layout/gray_line" />
    <include android:id="@id/real_time_display" layout="@layout/device_switch_option" />
    <include layout="@layout/gray_line" />
    <RelativeLayout android:id="@id/rl_vertical_srceen" android:visibility="2" android:layout_width="-1" android:layout_height="-2">
        <include android:id="@id/vertical_screen" android:layout_width="-1" android:layout_height="45dp" layout="@layout/device_switch_option" />
        <include android:id="@id/gray_line1" android:layout_width="-1" android:layout_height="1dp" android:layout_below="@id/vertical_screen" layout="@layout/gray_line" />
        <RelativeLayout android:id="@id/rlItemsVertical" android:layout_width="-2" android:layout_height="-2" android:layout_below="@id/gray_line1">
            <include android:id="@id/vertical_screen_mode_up" android:layout_width="-1" android:layout_height="45dp" layout="@layout/reversal_switch_option" />
            <include android:id="@id/gray_line2" android:layout_width="-1" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_below="@id/vertical_screen_mode_up" layout="@layout/gray_line" />
            <include android:id="@id/vertical_screen_mode_down" android:layout_width="-1" android:layout_height="45dp" android:layout_below="@id/gray_line2" layout="@layout/reversal_switch_option" />
            <include android:layout_width="-1" android:layout_height="1dp" android:layout_below="@id/vertical_screen_mode_down" layout="@layout/gray_line" />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout android:id="@id/rl_motion_display" android:visibility="2" android:layout_width="-1" android:layout_height="-2">
        <include android:id="@id/motion_display" android:layout_width="-1" android:layout_height="45dp" layout="@layout/device_switch_option" />
        <include android:layout_width="-1" android:layout_height="1dp" android:layout_below="@id/motion_display" layout="@layout/gray_line" />
    </RelativeLayout>
    <TextView android:background="@color/device_bg_gray" android:text="@string/base_settings" style="@style/device_label_text" />
    <include layout="@layout/gray_line" />
    <include android:id="@id/anti_lost" layout="@layout/device_switch_option" />
    <include layout="@layout/gray_line" />
    <include android:id="@id/upgrade_firmware" style="@style/device_option" layout="@layout/device_more_option" />
    <include layout="@layout/gray_line" />
    <TextView android:background="@color/device_bg_gray" android:text="@string/help_and_support" style="@style/device_label_text" />
    <include layout="@layout/gray_line" />
    <include android:id="@id/frequent_question" style="@style/device_option" layout="@layout/device_more_option" />
    <include layout="@layout/gray_line" />
    <TextView android:textColor="@color/device_red" android:id="@id/recovery_device" android:text="@string/recover_device" style="@style/device_option_text" />
    <include layout="@layout/gray_line" />
    <TextView android:textColor="@color/device_red" android:id="@id/disconnect_device" android:text="@string/disconnect_device" style="@style/device_option_text" />
    <include layout="@layout/gray_line" />
    <TextView android:textSize="15sp" android:background="@color/device_bg_gray" android:paddingBottom="10dp" android:layout_height="40dp" android:text="@string/unbind_device_tips" style="@style/device_label_text" />
</LinearLayout>
